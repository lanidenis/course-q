<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.courseq.example.courseq.Recommend">

    <TextView
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="@string/header_rec"
        android:gravity="center"
        android:textColor="@color/com_facebook_blue"
        android:textStyle="bold"
        android:textSize="25dp"/>


    <Switch
        android:text="Like"
        android:textSize="25dp"
        android:layout_width="260dp"
        android:textColor="@color/com_facebook_blue"
        android:layout_height="60dp"
        android:id="@+id/switch_1" />

    <Switch
        android:text="Find Useful"
        android:textSize="25dp"
        android:layout_width="260dp"
        android:textColor="@color/com_facebook_blue"
        android:layout_height="60dp"
        android:id="@+id/switch_2" />

    <Switch
        android:text="Do Well In"
        android:textSize="25dp"
        android:layout_width="260dp"
        android:textColor="@color/com_facebook_blue"
        android:layout_height="60dp"
        android:id="@+id/switch_3" />

    <!--
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

    <Switch
        android:text="Find OK"
        android:textSize="25dp"
        android:layout_marginLeft="0dp"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:textColor="@color/com_facebook_blue"
        android:id="@+id/switch_4" />

    <TextView
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:text="Find Hard"
        android:layout_marginLeft="10dp"
        android:textSize="25dp"
        android:textColor="@color/com_facebook_blue"
        />

    </LinearLayout>
    -->

    <Switch
        android:text="Be Prepared For"
        android:textSize="25dp"
        android:layout_width="260dp"
        android:textColor="@color/com_facebook_blue"
        android:layout_marginBottom="10dp"
        android:layout_height="60dp"
        android:id="@+id/switch_5" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/easy_Group"
        >
        <RadioButton
            android:text="Find Doable"
            android:textSize="25dp"
            android:textColor="@color/com_facebook_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/easy_button" />

        <RadioButton
            android:text="Find Challenging"
            android:textSize="25dp"
            android:textColor="@color/com_facebook_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/hard_button" />

    </RadioGroup>



    <LinearLayout
        android:id="@+id/second_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:weightSum="1">

        <Button
            android:id="@+id/next_button"
            style="?android:textAppearanceSmall"
            android:layout_width="100dp"
            android:layout_marginLeft="125dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="@string/next"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/third_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/back_button"
            style="?android:textAppearanceSmall"
            android:layout_width="70dp"
            android:background="@drawable/roundedbutton"
            android:layout_height="40dp"
            android:layout_marginLeft="45dp"
            android:text="@string/back_to_main"
            android:textStyle="bold" />

        <Button
            android:id="@+id/sign_out_button"
            style="?android:textAppearanceSmall"
            android:layout_width="60dp"
            android:background="@drawable/roundedbutton"
            android:layout_height="40dp"
            android:layout_marginLeft="130dp"
            android:text="@string/sign_out"
            android:textStyle="bold" />
    </LinearLayout>



</LinearLayout>
